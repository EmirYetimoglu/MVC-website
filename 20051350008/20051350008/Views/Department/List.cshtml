@{     Layout = null;   }

@{

    @model IEnumerable<_20051350008.Models.DepartmentModel>

}
<!DOCTYPE html>

<div class="row">  
    <div class="col-md-12">  
        <div class="panel panel-primary list-panel" id="list-panel">  
            <div class="panel-heading list-panel-heading">  
                <h1 class="panel-title list-panel-title">Department</h1>
            </div>  
            <div class="panel-body">  
                <table id="employee-data-table" border="1" class="table table-striped table-bordered" style="width:100%">
                    <thead>  
                        <tr>  
                            <th> Name</th>  
                            <th>Man Name</th>  
                            <th>ID</th>  
                            <th>Options</th>

                        </tr>  
                    </thead>  
                    <tbody>  
                        @foreach (var department in Model)  
                        {  
                            <tr>
                                <td>@department.DepartmentName </td>
                                <td>@department.ManagerName</td>
                                <td>@department.Id</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = department.Id })</td>
                                
                            </tr>  
                        }  
                    </tbody>  
                </table>  
            </div>  
        </div>  
    </div>  
</div>  
  
@section Scripts  
{  
      
 <script type="text/javascript">  
     $(document).ready(function () {
            $('#employee-data-table').DataTable();
        });  
    </script>     
      

} 
