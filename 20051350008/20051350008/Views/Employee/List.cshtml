@{
    Layout = null;
}

@model IEnumerable<_20051350008.Models.EmployeeModel>
<!DOCTYPE html>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">hardware store management</h1>
            </div>
            <div class="panel-body">
                <table id="employee-data-table" border="1" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>ProductName</th>
                            <th>IteamCode</th>
                            <th>Price</th>
                            <th>Options</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.ProductName</td>
                                <td>@employee.IteamCode</td>
                                <td>@employee.Price</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = employee.Id })</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>